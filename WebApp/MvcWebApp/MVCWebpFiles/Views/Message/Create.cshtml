@model INT422Project.ViewModels.MessageFull

@{
    ViewBag.Title = "Create Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Message</h2>
<p>Add new message.</p>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.standardMessage, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.standardMessage)
                @Html.ValidationMessageFor(model => model.standardMessage)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.customMessage, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.customMessage)
                @Html.ValidationMessageFor(model => model.customMessage)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
