@model MvcWebApp.ViewModels.ClassCancellationFull

@{
    ViewBag.Title = "Create Class Cancellation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    Cancel Class
    @Html.DisplayFor(model => model.Course)
</h2>
<p>Schedule a new class cancellation.</p>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Course.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("dropdown_courses")
            </div>
        </div>

        <!--        
        <div class="form-group">
            @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date)
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>
        -->

        <div class="form-group">
            @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("list_dates")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Message.CustomMessage, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Message.CustomMessage)
                @Html.ValidationMessageFor(model => model.Message.CustomMessage)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.UseCustomMessage)
                @Html.LabelFor(model => model.UseCustomMessage, new { @class = "control-label col-md-2" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" onclick="return confirm('Are you sure you wish to schedule these cancellations?')" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
