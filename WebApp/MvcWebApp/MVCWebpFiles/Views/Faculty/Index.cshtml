@model IEnumerable<MvcWebApp.ViewModels.FacultyList>

@{
    ViewBag.Title = "Faculty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Faculty</h2>
<p>List of all faculty members.</p>

<p>
    <a href="/Faculty/Create" class="btn btn-primary btn-large">Add New Faculty</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SenecaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SenecaId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FacultyId }) |
            @Html.ActionLink("Details", "Details", new { id=item.FacultyId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FacultyId })
        </td>
    </tr>
}

</table>
